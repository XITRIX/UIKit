<UIView
    width="100%"
    height="100%"
    backgroundColor="#000000">

    <UIView
        id="container"
        width="100%"
        height="100%"
        positionType="absolute">
    </UIView>

    <UIView
        width="100%"
        height="100%"
        flexDirection="column"
        justifyContent="spaceBetween"
        isTransparentTouch="true">
        <UIBlurView
            id="header"
            width="100%"
            backgroundColor="#151516F0">

            <UIView
                id="navigationBar"
                width="100%"
                height="44"
                justifyContent="center"
                alignItems="center">
                <UILabel
                    text="Настройки"
                    font="@path/Fonts/SFProDisplay-Semibold.ttf"
                    fontSize="17"
                    textColor="#FFFFFF"/>
            </UIView>
        </UIBlurView>
        <UIBlurView
            id="footer"
            width="100%"
            backgroundColor="#151516F0">
            <UIView
                id="tabBar"
                width="100%"
                height="48"
                justifyContent="center"
                alignItems="center">

                <UIView
                    gap="2"
                    justifyContent="center"
                    alignItems="center">

                    <UIImageView
                        width="30"
                        height="30"
                        image="@image/Icon.png"/>

                    <UILabel
                        text="Настройки"
                        font="@path/Fonts/SFProDisplay-Medium.ttf"
                        fontSize="10"
                        textColor="#FFFFFF"/>
                </UIView>

            </UIView>
        </UIBlurView>

    </UIView>

</UIView>
