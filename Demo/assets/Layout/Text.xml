<UIScrollView
    id="scrollView"
    width="100%"
    height="100%"
    bounceVertically="true">

    <UIView
        width="100%"
        preservesSuperviewLayoutMargins="true">

        <UIView
            leftEdgeRespects="layoutMargin"
            rightEdgeRespects="layoutMargin"
            preservesSuperviewLayoutMargins="true"
            marginTop="16"
            marginBottom="16"
            gap="16">

            <UIView
                width="100%"
                flexDirection="column"
                leftEdgeRespects="layoutMargin"
                rightEdgeRespects="layoutMargin"
                gap="16">

                <UIView
                    width="100%"
                    flexDirection="row"
                    leftEdgeRespects="layoutMargin"
                    rightEdgeRespects="layoutMargin"
                    gap="16">

                    <UIControl
                        id="button"
                        height="48"
                        grow="1"
                        justifyContent="center"
                        alignItems="center"
                        cornerRadius="12">
                        <UIView
                            justifyContent="center"
                            alignItems="center">
                            <UILabel
                                marginLeft="16"
                                marginRight="16"
                                text="Продолжить"
                                fontSize="17"
                                textColor="#FFFFFF"
                                font="@path/Fonts/SFProDisplay-Semibold.ttf"/>
                        </UIView>
                    </UIControl>

                    <UIControl
                        id="dismissButton"
                        height="48"
                        grow="1"
                        justifyContent="center"
                        alignItems="center"
                        cornerRadius="12">
                        <UIView
                            justifyContent="center"
                            alignItems="center">
                            <UILabel
                                marginLeft="16"
                                marginRight="16"
                                text="Назад"
                                fontSize="17"
                                textColor="#FFFFFF"
                                font="@path/Fonts/SFProDisplay-Semibold.ttf"/>
                        </UIView>
                    </UIControl>
                </UIView>

                <UIControl
                    id="button3"
                    height="48"
                    grow="1"
                    justifyContent="center"
                    alignItems="center"
                    cornerRadius="12">
                    <UIView
                        justifyContent="center"
                        alignItems="center">
                        <UILabel
                            marginLeft="16"
                            marginRight="16"
                            text="Продолжить"
                            fontSize="17"
                            textColor="#FFFFFF"
                            font="@path/Fonts/SFProDisplay-Semibold.ttf"/>
                    </UIView>
                </UIControl>
            </UIView>

            <UIView
                backgroundColor="#1C1C1E"
                cornerRadius="12">

                <UILabel
                    id="text"
                    text="Test text"
                    fontSize="17"
                    marginTop="16"
                    marginBottom="16"
                    marginLeft="16"
                    marginRight="16"
                    textColor="#FFFFFF"/>
            </UIView>

            <UIView
                    backgroundColor="#1C1C1E"
                    cornerRadius="12">
                <UILabel
                        id="text1"
                        text="Test text"
                        fontSize="17"
                        marginTop="16"
                        marginBottom="16"
                        marginLeft="16"
                        marginRight="16"
                        textColor="#FFFFFF"/>

            </UIView>

            <UIView
                    backgroundColor="#1C1C1E"
                    cornerRadius="12">
                <UILabel
                        id="text2"
                        text="Test text"
                        fontSize="17"
                        marginTop="16"
                        marginBottom="16"
                        marginLeft="16"
                        marginRight="16"
                        textColor="#FFFFFF"/>

            </UIView>

            <UIView
                    backgroundColor="#1C1C1E"
                    cornerRadius="12">
                <UILabel
                        id="text3"
                        text="Test text"
                        fontSize="17"
                        marginTop="16"
                        marginBottom="16"
                        marginLeft="16"
                        marginRight="16"
                        textColor="#FFFFFF"/>

            </UIView>

        </UIView>

    </UIView>
</UIScrollView>
