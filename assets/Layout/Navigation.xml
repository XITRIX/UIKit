<UIView
    width="100%"
    height="100%"
    backgroundColor="#FFFFFF">

    <UIView
        id="container"
        width="100%"
        height="100%"
        positionType="absolute"
        backgroundColor="#00FFFF90">
    </UIView>

    <UIView
        width="100%"
        height="100%"
        flexDirection="column"
        justifyContent="spaceBetween"
        isTransparentTouch="true">
        <UIView
            id="header"
            width="100%"
            backgroundColor="#FF000090">

            <UIView
                id="navigationBar"
                width="100%"
                height="44"
                justifyContent="center"
                alignItems="center"
                backgroundColor="#00FF0090">
                <UILabel
                    text="Настройки"
                    font="@path/Fonts/SFProDisplay-Semibold.ttf"
                    fontSize="17"/>
            </UIView>
        </UIView>
        <UIView
            id="footer"
            width="100%"
            backgroundColor="#FF000090">
            <UIView
                id="tabBar"
                width="100%"
                height="44"
                backgroundColor="#00FF0090">
            </UIView>
        </UIView>

    </UIView>

</UIView>
